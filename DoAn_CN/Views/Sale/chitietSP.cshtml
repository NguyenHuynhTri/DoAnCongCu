
@{
    ViewBag.Title = "chitietSP";
    Layout = "~/Views/Shared/_LayoutSaler.cshtml";
}
<div id="fb-root"></div>
<script async defer crossorigin="anonymous" src="https://connect.facebook.net/vi_VN/sdk.js#xfbml=1&version=v12.0&appId=265453772220339&autoLogAppEvents=1" nonce="BCOMHOKP"></script>

<!-- banner -->
<div class="page-head">
    <div class="container">
    </div>
</div>
<!-- //banner -->
<!-- single -->
<div class="single">
    <div class="container">
        <div class="col-md-6 single-right-left animated wow slideInUp animated" data-wow-delay=".5s" style="visibility: visible; animation-delay: 0.5s; animation-name: slideInUp;">
            <div class="grid images_3_of_2">
                <div class="flexslider">
                    <!-- FlexSlider -->
                    <script>
                        // Can also be used with $(document).ready()
                        $(window).load(function () {
                            $('.flexslider').flexslider({
                                animation: "slide",
                                controlNav: "thumbnails"
                            });
                        });
                    </script>
                    <!-- //FlexSlider-->
                    <ul class="slides" style="list-style: none">
                        <li data-thumb="@Href("~/Content/Sale/images/" + Model.image_1)">
                            <div class="thumb-image"> <img src="@Href("~/Content/Sale/images/" + Model.image_1)" data-imagezoom="true" class="img-responsive"> </div>
                        </li>
                        <li data-thumb="@Href("~/Content/Sale/images/" + Model.image_2)">
                            <div class="thumb-image"> <img src="@Href("~/Content/Sale/images/" + Model.image_2)" data-imagezoom="true" class="img-responsive"> </div>
                        </li>
                        <li data-thumb="@Href("~/Content/Sale/images/" + Model.image_3)">
                            <div class="thumb-image"> <img src="@Href("~/Content/Sale/images/" + Model.image_3)" data-imagezoom="true" class="img-responsive"> </div>
                        </li>
                        <li data-thumb="@Href("~/Content/Sale/images/" + Model.image_4)">
                            <div class="thumb-image"> <img src="@Href("~/Content/Sale/images/" + Model.image_4)" data-imagezoom="true" class="img-responsive"> </div>
                        </li>
                    </ul>
                    <div class="clearfix"></div>
                </div>
            </div>
        </div>
        <div class="col-md-6 single-right-left simpleCart_shelfItem animated wow slideInRight animated" data-wow-delay=".5s" style="visibility: visible; animation-delay: 0.5s; animation-name: slideInRight;">
            <h3>@Model.TenSP</h3>
            <p><span class="item_price">@String.Format("{0:0,0}", Model.GiaGoc) VNĐ </span> <del>@String.Format("{0:0,0}", Model.GiaBan) VNĐ</del></p>
            <div class="occasion-cart">
                <a href="@Url.Action("Themgiohang","Sale", new { id = Model.idSP, strUrl = Request.Url.ToString() })" class="item_add hvr-outline-out button2">Thêm vào giỏ hàng</a>
            </div>

        </div>
        <div class="clearfix"> </div>

        <div class="bootstrap-tab animated wow slideInUp animated" data-wow-delay=".5s" style="visibility: visible; animation-delay: 0.5s; animation-name: slideInUp;">
            <div class="bs-example bs-example-tabs" role="tabpanel" data-example-id="togglable-tabs">
                <ul id="myTab" class="nav nav-tabs" role="tablist">
                    <li role="presentation" class="active"><a href="#home" id="home-tab" role="tab" data-toggle="tab" aria-controls="home" aria-expanded="true">Mô tả sản phẩm</a></li>

                </ul>
                <div id="myTabContent" class="tab-content">
                    <div role="tabpanel" class="tab-pane fade in active bootstrap-tab-text" id="home" aria-labelledby="home-tab">
                        @Html.Raw(Model.mota)
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
<!-- //single -->
